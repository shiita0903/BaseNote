<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/note_item_menu_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/note_item_menu_select_tag"
        android:layout_alignRight="@+id/note_item_menu_select_tag"
        android:padding="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="@string/menu_delete"/>
    </LinearLayout>

    <View
        android:id="@+id/separator1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_below="@+id/note_item_menu_delete"
        android:layout_alignLeft="@+id/note_item_menu_select_tag"
        android:layout_alignRight="@+id/note_item_menu_select_tag"
        android:background="#616161"/>

    <LinearLayout
        android:id="@+id/note_item_menu_select_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="64dp"
        android:paddingLeft="16dp"
        android:layout_below="@+id/separator1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_tag"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="@string/menu_select_tag"/>
    </LinearLayout>
</RelativeLayout>